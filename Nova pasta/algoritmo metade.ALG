Algoritmo "metade"
Var
// Seção de Declarações das variáveis
  a,b: inteiro
  m : real

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc...
    escreval("informe dois numeros inteiros: ")

    leia(a)

    m <- (a/2)

    escreval("A metade de ",a," e igual a ",m,".")

Fimalgoritmo